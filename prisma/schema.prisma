// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum MovieStatusType {
  TO_WATCH
  WATCHING // Adicionado
  WATCHED
  DROPPED  // Adicionado
}

enum MediaType {
  MOVIE
  ANIME
  SERIES // Adicionado
}

// Modelos Principais
model User {
  id             String         @id @default(cuid())
  name           String?
  email          String?        @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  username       String         @unique
  accounts       Account[]
  sessions       Session[]
  mediaStatuses  MediaStatus[]
  scheduleItems  ScheduleItem[]
}

model Media {
  id            String         @id @default(cuid())
  mediaType     MediaType
  tmdbId        Int? // @unique removido
  malId         Int? // @unique removido
  title         String
  posterPath    String?
  releaseYear   Int?
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  @@unique([mediaType, tmdbId])
  @@unique([mediaType, malId])
  
}

model MediaStatus {
  id      String          @id @default(cuid())
  status  MovieStatusType
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  media   Media           @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  mediaId String


  lastSeasonWatched   Int? // Visto até Temporada...
  lastEpisodeWatched  Int? // Visto até Episódio...
  lastEpisodeWatchedEnd Int? // Visto até Episódio (Fim do intervalo)


  isWeekly          Boolean  @default(false)

  @@unique([userId, mediaId])
}

model ScheduleItem {
  id          String   @id @default(cuid())
  scheduledAt DateTime
  horario     String?

  // --- [NOVO] ---
  // Para guardar qual episódio está a ser agendado
  // Ex: "Agendado: Temporada 1, Episódio 5"
  seasonNumber    Int? // Ex: 1
  episodeNumber   Int? // Ex: 5 (Início do intervalo)
  episodeNumberEnd Int? // Ex: 10 (Fim do intervalo)
  // --- [FIM NOVO] ---

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  media   Media  @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  mediaId String
}

// Modelos NextAuth (Padrão)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}


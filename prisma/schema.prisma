// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- ENUMS ---
enum MovieStatusType {
  TO_WATCH
  WATCHING
  WATCHED
  DROPPED
}

enum ProfileVisibility {
  PUBLIC
  PRIVATE
}

enum MediaType {
  MOVIE
  ANIME
  SERIES
  GAME
  OUTROS
}

enum UserRole {
  CREATOR
  VISITOR
}

// --- MODELOS ---

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime? @map("email_verified")
  image          String?
  hashedPassword String?
  username       String    @unique
  role           UserRole  @default(VISITOR)
  aiSummary      String?   @db.Text

  socialItems SocialItem[]
  sponsors    Sponsor[]

  youtubeMainUrl    String? 
  youtubeSecondUrl  String?
  youtubeThirdUrl   String? 
  youtubeFourthUrl  String? 

  statFollowers     String?  
  statMedia         String?
  statRegion        String?  

  amazonWishlistUrl String?
  
  bio               String? @db.Text
  profileBannerUrl  String?

  profileVisibility ProfileVisibility @default(PUBLIC)
  twitchUsername    String?           @unique
  discordWebhookUrl String?           @map("discord_webhook_url")

  // Rela√ß√µes
  accounts        Account[]
  sessions        Session[]
  mediaStatuses   MediaStatus[]
  scheduleItems   ScheduleItem[]

  showToWatchList  Boolean @default(true)
  showWatchingList Boolean @default(true)
  showWatchedList  Boolean @default(true)
  showDroppedList  Boolean @default(true)

  @@map("users")
}

model Media {
  id            String         @id @default(cuid())
  mediaType     MediaType
  tmdbId        Int?
  malId         Int?
  igdbId        Int?
  title         String
  posterPath    String?
  releaseYear   Int?
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  totalSeasons  Int?

  @@unique([mediaType, tmdbId])
  @@unique([mediaType, malId])
  @@unique([mediaType, igdbId])
  @@index([title])
}

model MediaStatus {
  id                    String          @id @default(cuid())
  status                MovieStatusType
  userId                String
  user                  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId               String
  media                 Media           @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  lastSeasonWatched     Int?
  lastEpisodeWatched    Int?
  lastEpisodeWatchedEnd Int?
  isWeekly              Boolean         @default(false)
  rating                Int?
  watchedAt             DateTime?
  seasonProgress        Json?
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt @default(now())

  @@unique([userId, mediaId])
  // üëá NOVO √çNDICE: Otimiza contagens do dashboard
  @@index([userId, status]) 
  @@index([userId, updatedAt])
}

model ScheduleItem {
  id               String   @id @default(cuid())
  scheduledAt      DateTime
  horario          String?
  seasonNumber     Int?
  episodeNumber    Int?
  episodeNumberEnd Int?
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId          String
  media            Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  isCompleted      Boolean  @default(false)

  // üëá NOVOS √çNDICES: Otimizam a busca da timeline e filtros
  @@index([userId, scheduledAt])
  @@index([userId, isCompleted])
}



// --- MODELOS NEXT-AUTH ---
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  token   String   @id @unique
  email   String
  expires DateTime

  @@map("password_reset_tokens")
}

model SocialItem {
  id        String   @id @default(cuid())
  platform  String 
  imageUrl  String
  linkUrl   String
  title     String?
  subtitle  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("social_items")
}

model Sponsor {
  id          String   @id @default(cuid())
  name        String
  category    String?
  imageUrl    String
  linkUrl     String?
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@map("sponsors")
}
// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- ENUMS (NÃ­vel Superior) ---
enum MovieStatusType {
  TO_WATCH
  WATCHING
  WATCHED
  DROPPED
}

enum MediaType {
  MOVIE
  ANIME
  SERIES
}

enum UserRole {
  CREATOR
  VISITOR
}

// --- FIM ENUMS ---

// --- MODELO USER ---
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  username       String    @unique
  role           UserRole  @default(VISITOR)

  accounts      Account[]
  sessions      Session[]
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]
}

// --- FIM USER ---

// --- OUTROS MODELOS ---
model Media {
  id          String    @id @default(cuid())
  mediaType   MediaType
  tmdbId      Int?
  malId       Int?
  title       String
  posterPath  String?
  releaseYear Int?

  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  @@unique([mediaType, tmdbId])
  @@unique([mediaType, malId])
}

model MediaStatus {
  id                    String          @id @default(cuid())
  status                MovieStatusType
  userId                String
  user                  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId               String
  media                 Media           @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  lastSeasonWatched     Int?
  lastEpisodeWatched    Int?
  lastEpisodeWatchedEnd Int?
  isWeekly              Boolean         @default(false)

  @@unique([userId, mediaId])
}

model ScheduleItem {
  id               String   @id @default(cuid())
  scheduledAt      DateTime
  horario          String?
  seasonNumber     Int?
  episodeNumber    Int?
  episodeNumberEnd Int?
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId          String
  media            Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
}

// --- FIM OUTROS MODELOS ---

// --- MODELOS NEXT-AUTH V4 ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- FIM MODELOS NEXT-AUTH V4 ---

// prisma/schema.prisma
// Versão CORRIGIDA e SIMPLIFICADA
// Removemos cor(profileThemeColor) e banner(profileBannerUrl)
// Mantemos 'bio'
// Mantemos os @map OBRIGATÓRIOS para o Next-Auth v4 Adapter v1

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// --- ENUMS (Nível Superior) ---
enum MovieStatusType {
  TO_WATCH
  WATCHING
  WATCHED
  DROPPED
}

// --- ENUMS (Nível Superior) ---
enum ProfileVisibility {
  PUBLIC
  FOLLOWERS_ONLY
}

enum MediaType {
  MOVIE
  ANIME
  SERIES
  GAME
  OUTROS
}

enum UserRole {
  CREATOR
  VISITOR
}

// --- FIM ENUMS ---

// --- MODELO USER (Simplificado + @map) ---
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime? @map("email_verified") // Mapeado
  image          String? // Campo do Avatar (ainda presente)
  hashedPassword String?
  username       String    @unique
  role           UserRole  @default(VISITOR)
  aiSummary      String?   @db.Text

  socialItems SocialItem[]

  // --- Campos de Personalização ---
  bio              String? @db.Text // Mantido
  profileBannerUrl String?

  profileVisibility ProfileVisibility @default(PUBLIC)
  twitchUsername    String?           @unique

  discordWebhookUrl String? @map("discord_webhook_url")

  // Relações
  accounts      Account[]
  sessions      Session[]
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  showToWatchList  Boolean @default(true)
  showWatchingList Boolean @default(true)
  showWatchedList  Boolean @default(true)
  showDroppedList  Boolean @default(true)

  following Follows[] @relation("Following")
  followers Follows[] @relation("Followers")

  @@map("users")
}

// --- FIM USER ---

// --- SEUS MODELOS (Sem mudanças) ---
model Media {
  id            String         @id @default(cuid())
  mediaType     MediaType
  tmdbId        Int?
  malId         Int?
  igdbId        Int?
  title         String
  posterPath    String?
  releaseYear   Int?
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  @@unique([mediaType, tmdbId])
  @@unique([mediaType, malId])
  @@unique([mediaType, igdbId])
}

model MediaStatus {
  id                    String          @id @default(cuid())
  status                MovieStatusType
  userId                String
  user                  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId               String
  media                 Media           @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  lastSeasonWatched     Int?
  lastEpisodeWatched    Int?
  lastEpisodeWatchedEnd Int?
  isWeekly              Boolean         @default(false)
  rating                Int? // (Bônus: Se você implementar a funcionalidade de nota)
  watchedAt             DateTime? // <-- O CAMPO-CHAVE PARA OS GRÁFICOS

  @@unique([userId, mediaId])
}

model ScheduleItem {
  id               String   @id @default(cuid())
  scheduledAt      DateTime
  horario          String?
  seasonNumber     Int?
  episodeNumber    Int?
  episodeNumberEnd Int?
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaId          String
  media            Media    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  isCompleted      Boolean  @default(false)
}

model Follows {
  followerId  String
  followingId String

  // Define a relação para o "seguidor" (quem segue)
  follower User @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)

  // Define a relação para o "seguido" (quem é seguido)
  following User @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)

  // Garante que um utilizador não pode seguir o mesmo criador duas vezes
  @@id([followerId, followingId])
  @@map("follows")
}

// --- MODELOS NEXT-AUTH V4 (Com @map) ---
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// --- FIM MODELOS NEXT-AUTH V4 ---

model PasswordResetToken {
  // Usamos o token como o ID para buscas rápidas e garantia de unicidade
  token   String   @id @unique
  email   String // O email do usuário que solicitou o reset
  expires DateTime // A data/hora que o token expira

  @@map("password_reset_tokens")
}

model SocialItem {
  id       String @id @default(cuid())
  platform String // Vamos usar "YOUTUBE" ou "INSTAGRAM"

  imageUrl String // Link da Imagem de Capa/Thumbnail
  linkUrl  String // Link para onde vai ao clicar (Vídeo ou Post)

  title    String? // Título do vídeo ou Legenda do post
  subtitle String? // Ex: "10k views" ou "❤️ Curtiu"

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("social_items")
}

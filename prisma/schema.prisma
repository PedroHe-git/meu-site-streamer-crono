// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql" // Ou o seu provider (mysql, sqlite, etc.)
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Necess√°rio se usar Neon DB ou similar
}

enum MovieStatusType {
  TO_WATCH
  WATCHING
  WATCHED
  DROPPED
}

enum MediaType {
  MOVIE
  ANIME
  SERIES
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  username       String    @unique

  accounts Account[]
  sessions Session[]

  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]
}

model Media {
  id            String         @id @default(cuid())
  mediaType     MediaType
  tmdbId        Int?
  malId         Int?
  title         String
  posterPath    String?
  releaseYear   Int?
  mediaStatuses MediaStatus[]
  scheduleItems ScheduleItem[]

  @@unique([mediaType, tmdbId])
  @@unique([mediaType, malId])
}

model MediaStatus {
  id      String          @id @default(cuid())
  status  MovieStatusType
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  media   Media           @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  mediaId String

  lastSeasonWatched     Int?
  lastEpisodeWatched    Int?
  lastEpisodeWatchedEnd Int?
  isWeekly              Boolean @default(false)

  @@unique([userId, mediaId])
}

model ScheduleItem {
  id               String   @id @default(cuid())
  scheduledAt      DateTime
  horario          String?
  seasonNumber     Int?
  episodeNumber    Int?
  episodeNumberEnd Int?

  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  String
  media   Media  @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  mediaId String
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String? // Adicionado na v4 para alguns providers

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
